# input format
# Line 1:- size of the array 
# Line 2:- Point from which you want to reverse
# Line 3:- enter elements for the array
#include <iostream>
using namespace std;
int main() {
    int n;
    cout<<"size of the array "<<endl;
    cin>>n;
    int point;
    cout<<"enter the point till you want reverse"<<endl;
    cin>>point;
    int arr[n];
    cout<<"starting entering elements"<<endl;
    for(int i=0;i<n;i++){
       cin>>arr[i];
    }
    cout<<"Succesfully Done:-"<<endl;
    for(int i=point;i>=0;i--){
        cout<<arr[i]<<" ";
    }
    
    for(int i=point+1;i<n;i++){
        cout<<arr[i]<<" ";
    }
    return 0;
}
